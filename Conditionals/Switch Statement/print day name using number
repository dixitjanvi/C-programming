//WAP to input day no.1,2,3,4,5,6,7 and print mon,tue,wed,thu,fri,sat,sun using switch case.
#include<stdio.h>
int main(){
    int N;
    printf("no.1,2,3,4,5,6,7 and print mon,tue,wed,thu,fri,sat,sun:\n");
    printf("Enter a number:");
    scanf("%d",&N);
    
    switch(N){
        case 1 :
           printf("Monday");
           break;
        case 2 :
           printf("Tuesday");
           break;
        case 3 :
           printf(" Wednesday");
           break;
        case 4 :
           printf("Thursday");
           break;
        case 5 :
           printf("Friday");
           break;
        case 6 :
           printf("Saturday");
           break;
        case 7 :
           printf("Sunday");
           break;
        default:
           printf("Invalid number please pick the number from 1 to 7");
    }
    return 0;
}
