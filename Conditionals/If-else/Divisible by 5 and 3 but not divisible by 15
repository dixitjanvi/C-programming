//Take positive integer input and tell if it is divisible by 5 and 3 but not divisible by 15.
#include<stdio.h>
int main(){
    int x;
    printf("Enter a number:");
    scanf("%d",&x);
    
    //== it's use for comparision
  
    if(x%5==0 || x%3==0 && x%15!=0) {
        printf("The number is divisible by 5 or 3 but not 15.\n");
    }
    else{
        printf("The number is not matching the required condition\n");
    }
    return 0;  
}
