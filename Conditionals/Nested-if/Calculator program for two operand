//WAP to create a calculator and perform all the operations.
#include<stdio.h>
int main(){
    char ch;
    printf("Enter the operator:");
    scanf("%c",&ch);
    int x,y;
    printf("Enter the 1st operand:");
    scanf("%d",&x);
    printf("Enter the 2nd operand:");
    scanf("%d",&y);
    
    //IF Else
    if(ch=='+'){
        printf("Addition is %d",x+y);
    }
    else if(ch=='-'){
         printf("Subtraction is %d",x-y);
    }
    else if(ch=='*'){
         printf("Multiplication is %d",x*y);
    }
    else if(ch=='/'){
         printf("Division is %d",x/y);
    }
    else{
        printf("Invalid operator");
    }
    return 0;
}
