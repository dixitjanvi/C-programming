//Take three positive integers input and print the least of them.
#include<stdio.h>
int main(){
    int x,y,z;
    printf("Three positive integer input:\n");
    printf("Enter the value of first integer:");
    scanf("%d",&x);
    printf("Enter the value of second integer:");
    scanf("%d",&y);
    printf("Enter the value of third integer:");
    scanf("%d",&z);
    
    if(x>y & z>y){
        printf("second integer is least.");
    }
    if(y>x & z>x){
        printf("first integer is least.");
    }
    if(z>x & z>y){
        printf("third integer is least.");
    }
    return 0;
}
