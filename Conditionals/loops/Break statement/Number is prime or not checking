//WAP to check if a number is prime or not.
#include<stdio.h>
int main(){
    int n;
    printf("Enter a number:");
    scanf("%d",&n);
    
    for(int i=2; i<=n/2; i++){
        if(n%i==0){
            printf("%d is Composite\n",n);
            break;
        }
        else{
            printf("%d is prime\n",n);
            break;
        }
    }
    return 0;
}



